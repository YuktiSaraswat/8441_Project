<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".F2">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="4dp">


        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="लक्षण\n"
            android:textSize="20sp" />
        <ImageButton
            android:id="@+id/i"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mic1" />
    </LinearLayout>
        <TextView
            android:id="@+id/t2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="लक्षण दिखने से पहले, व्यक्ति एक से चौदह दिनों तक वायरस की वजह से बीमार रह सकता है. बुखार, थकान, और सूखी खांसी कोरोना वायरस की बीमारी (COVID-19) के सबसे आम लक्षण हैं. ज़्यादातर लोग (करीब 80%), बिना किसी खास इलाज के ही ठीक हो जाते हैं.
बहुत ही कम मामलों में, यह बीमारी गंभीर और जानलेवा भी हो सकती है. बुज़ुर्ग और ऐसे लोग जिन्हें दूसरी स्वास्थ्य समस्याएं (जैसे कि अस्थमा, डायबिटीज़ या दिल की बीमारी) है उनके लिए यह वायरस ज़्यादा खतरनाक साबित हो सकता है.\n\n" />
        <TextView
            android:id="@+id/t3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="लोगों को ये अनुभव हो सकते हैं:\n"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/t4"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:text="• खांसी \n•बुखार \n•थकान \n•सांस लेने में तकलीफ़ (ज़्यादा गंभीर मामलों में)"/>
    <TextView
        android:id="@+id/tk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="अधिक जानकारी के लिए यहां क्लिक करें"


        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="260dp" />

    <TextView
        android:id="@+id/tk2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:clickable="true"
        android:ems="10"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:text="https://www.who.int/emergencies/diseases/novel-coronavirus-2019"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="260dp" />

</LinearLayout>